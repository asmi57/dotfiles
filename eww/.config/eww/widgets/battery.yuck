(deflisten batteryjson
	:initial "{}"
	"ewwbattery -j"
)
(defwidget battery []
	(box
		:halign "center"
		:space-evenly false
		:class "battery"
		(label
			:class "symbol"
			:halign "center"
			:text "${batteryjson.symbol ?: "B"}"
		)
		(label
			:class "value"
			:halign "center"
			:text "${batteryjson.percentage ?: "?"}%"
		)
	)
)
