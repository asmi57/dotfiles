
font pango:DejaVu Sans Mono 12

for_window [all] border pixel 1
smart_borders on

for_window [class="^discord$"] {
	floating enable
	move to scratchpad
	scratchpad show
}
for_window [app_id="^org.kde.kcalc$"] {
	floating enable
	resize set 890 px 528 px
}

for_window [class="screenkey"] {
	floating enable
	resize set 1200 px 800 px
}

blur enable
blur_passes 3
blur_radius 10


