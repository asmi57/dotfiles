
# super key
set $mod Mod4


include media
include windows
include workspaces
include resize

# restart i3 in place
bindsym $mod+Shift+r exec swaymsg reload

# kill
bindsym $mod+q kill

# rofi menus
bindsym $mod+d exec --no-startup-id fish -c "rofi -show drun"
bindsym $mod+w exec --no-startup-id fish -c "rofi -show window"

# kitty terminal
bindsym $mod+Return       exec $terminal
bindsym $mod+Shift+Return exec $terminal_tmux

# clip screen
bindsym Print exec screenclip_sway

