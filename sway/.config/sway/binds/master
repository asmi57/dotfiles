
# super key
set $mod Mod4


include media
include windows
include workspaces
include resize

# restart i3 in place
bindsym $mod+Shift+r exec swaymsg reload

# kill
bindsym $mod+q kill

# rofi menus
bindsym $mod+d exec --no-startup-id fish -c "killall rofi || rofi -show drun"
bindsym $mod+w exec --no-startup-id fish -c "killall rofi || rofi -show window"

# kitty terminal
bindsym $mod+Return       exec $terminal
bindsym $mod+Shift+Return exec $terminal_tmux

# clip screen
bindsym Print exec screenclip
bindsym Ctrl+Print exec sh -c "grim - | wl-copy"

bindsym $mod+b       exec gtk-launch firefox
bindsym $mod+Shift+b exec gtk-launch college

bindsym $mod+m exec calculator
bindsym $mod+n exec fish -c 'open "obsidian://open?vault=notes&file=100%20Todo%2F000%20TODOBASE.base"'
bindsym $mod+Shift+f exec fanprofile
bindsym $mod+p exec sh -c "eww close player || eww open player"


